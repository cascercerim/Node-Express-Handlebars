<div class="container bg">

    <div class="row">
        <div class="center col-sm-12">
            <h1>Eat-Da-Burger App</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6"></div>
        <br>
        <h2>Burgers Available To Eat!</h2>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
                <button class="btn-primary burg" type="submit">Devour It!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-6">
        <h2>Burgers That Have Been Eaten!</h2>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
            {{this.id}}
            {{this.burger_name}}
        </li>
        {{/if}}
        {{/each}}
    </div>

</div>

<div class="row">
    <div class="center col-sm-12">
        <h2>Add A Burger!</h2>
        <form>
            <div class="form-group">
                <p>Enter a burger you want to order and click the Submit Order button.</p>
                <input type="text" id="ca">
            </div>
            <button class="btn-danger " id="submit" type="submit">Submit Order</button>
        </form>
    </div>

</div>

</div>